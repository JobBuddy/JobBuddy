<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbg"
    android:backgroundTint="#607D91F3"
    android:backgroundTintMode="src_over"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:gravity="center"
    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:backgroundTint="#60000000" >



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:text="Job-Buddy"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:textFontWeight="50dp"
                android:textSize="40dp"
                android:textColor="#063799"
                android:layout_gravity="top|center"
                />

            <EditText
                android:id="@+id/email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/logindesign"
                android:hint="Email"
                android:padding="10dp"
                android:textColorHint="@android:color/background_light" />

            <EditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/logindesign"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHint="@android:color/background_light" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttondesign"
                android:text="Log In"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/signup_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Dont't Have an account? Sign Up Here"
                android:textAppearance="?android:textAppearanceSearchResultSubtitle"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/skip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="SKIP>>>"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:layout_gravity="end|bottom" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/google_login_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#E95E4E"
                android:backgroundTint="@color/browser_actions_divider_color"
                android:text="Google"
                android:textColor="#ffffff"
                android:layout_marginRight="4dp"
                android:drawableLeft="@drawable/google"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/fb_login_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#416BC1"
                android:backgroundTint="@color/browser_actions_divider_color"
                android:text="Facebook"
                android:drawableLeft="@drawable/facebook"
                android:layout_marginLeft="4dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>